{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "lib": [
            "es2022"
        ],
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "ts-node": {
        "esm": true
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}